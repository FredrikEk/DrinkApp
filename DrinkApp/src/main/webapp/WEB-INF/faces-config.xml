<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <!-- Main router -->

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>drinklist</from-outcome>
            <to-view-id>partials/drink/drinkList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addDrink</from-outcome>
            <to-view-id>partials/drink/authdrinkpages/addDrink.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addDrink2</from-outcome>
            <to-view-id>partials/drink/addDrink2.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>deleteDrink</from-outcome>
            <to-view-id>partials/drink/authdrinkpages/deleteDrink.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editDrink</from-outcome>
            <to-view-id>partials/drink/authdrinkpages/editDrink.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>favouriteDrinks</from-outcome>
            <to-view-id>partials/drink/authdrinkpages/favouriteDrinks.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>partials/login/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>partials/login/register.xhtml</to-view-id>
        </navigation-case>    
        <navigation-case>
            <from-outcome>registerSuccess</from-outcome>
            <to-view-id>partials/auth/registerSuccess.xhtml</to-view-id>
        </navigation-case>        
        <navigation-case>
            <from-action>#{loginCtrl.login()}</from-action>
            <from-outcome>login-success</from-outcome>
            <to-view-id>partials/auth/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginCtrl.login()}</from-action>
            <from-outcome>login-fail</from-outcome>
            <to-view-id>partials/login/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginCtrl.logout()}</from-action>
            <from-outcome>logout-success</from-outcome>
            <to-view-id>partials/login/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>   
</faces-config>
